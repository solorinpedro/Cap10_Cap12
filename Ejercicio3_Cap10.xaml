<Window x:Class="Cap10_Cap12.Ejercicio3_Cap10"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cap10_Cap12"
        mc:Ignorable="d"
        Title="Ejercicio3_Cap10" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel>
                <Label Content="Lado"/>
                <TextBox x:Name="TextBoxLado"  Height="25"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="Calcular" Height="30" Width="50" Content="Calcular" Click="Calcular_Click" Margin="0,10"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Resultado"/>
                <TextBox x:Name="TextBoxResultado" Height="25"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
